{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "vitest/globals"],
    "typeRoots": ["src/types"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "paths": {
      "@/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "views/*": ["./src/views/*"],
      "router/*": ["./src/router/*"],
      "assets/*": ["./src/assets/*"],
      "types/*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "vite.config.ts", "vitest-setup.ts"]
}
